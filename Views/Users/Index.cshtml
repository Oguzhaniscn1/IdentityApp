@model IEnumerable<AppUser>



<a class="btn btn-primary" asp-controller="Account" asp-action="Create">Crate User</a>
<hr>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
            @if(Model.Count()==0)
    {
        <tr><td colspan="4" class="text-center">User Yok</td></tr>
    }
        @foreach(var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">edit</a>
                    <form asp-action="Delete" method="post" onsubmit="return confirm('emmin misiniz.')" style="display: inline-block;">
                        <input type="hidden" value="@user.Id" name="id">
                        <button type="submit" class="btn btn-danger btn-sm">delete</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>